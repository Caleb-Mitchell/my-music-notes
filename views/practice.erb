<div class="content">
  <div class="container-fluid" style="margin-bottom: 50px">
    <div class="row">
      <div class="card card-stats mx-auto">

        <div class="card-header card-header-warning card-header-icon">
          <p class="card-category">Days Praticed This Week</p>
          <h3 class="card-title" id="day_total"><%= @day_total %>/7<small>days</small></h3>
        </div>

      <div class="card-footer">
        <div class="stats"><h6>Try to practice a little bit every day!</h6></div>
      </div>

    </div>
  </div>
</div>

  <form action="/" method="post" id="check_boxes">
    <table class="table table-bordered">
      <tbody>
        <% @days.each do |day| %>
        <tr>
          <td class="table-date-text"><%= day %></td>
          <td>
            <div class="form-check">
              <label class="form-check-label">
                <% if session[:checkboxes].find { |hash| hash["day"] == day.downcase }["checked"] == "t" %>
                  <input class="form-check-input" style="margin-top: 30px" type="checkbox"
                         value="checked" name="<%= "#{day.downcase}_check" %>"
                         onchange="document.getElementById('check_boxes').submit()" checked>
                <% elsif session[:checkboxes].find { |hash| hash["day"] == day.downcase }["checked"] == "f" %>
                  <input class="form-check-input" style="margin-top: 30px" type="checkbox"
                         value="checked" name="<%= "#{day.downcase}_check" %>"
                         onchange="document.getElementById('check_boxes').submit()">
                <% end %>
                <span class="form-check-sign">
                  <span class="check"></span>
                </span>
              </label>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </form>
</div>

<form action="/reset" method="post">
    <input type="submit" value="Reset">
</form>
